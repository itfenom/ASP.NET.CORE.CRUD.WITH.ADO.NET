
@model EMS.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<div class="flex-container">
    <div class="card shadow">
        <div class="card-header text-center">
            <h3>Edit Employee</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" asp-controller="Employee" asp-action="Edit" asp-antiforgery="true">
                <div class="form-group m-0">
                    <label class="col-form-label text-primary" asp-for="Name">@Html.DisplayNameFor(m => m.Name)</label>
                    <input type="text" class="form-control" asp-for="Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-0">
                    <label class="col-form-label text-primary" asp-for="Name">@Html.DisplayNameFor(m => m.Department)</label>
                    <input type="text" class="form-control" asp-for="Department" required />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group m-0">
                    <label class="col-form-label text-primary" asp-for="Name">@Html.DisplayNameFor(m => m.City)</label>
                    <input type="text" class="form-control" asp-for="City" required />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label class="col-form-label text-primary" asp-for="Name">@Html.DisplayNameFor(m => m.Gender)</label>
                    <select type="text" class="form-control" asp-for="Gender" required>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                        <option value="O">Others</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-user-edit"></i> Update</button>
                    <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                </div>
            </form>
        </div>
    </div>
    @if (ViewBag.EditMessage != null)
    {
        <div class="alert
             @{
                 if (ViewBag.EditMessage.Success)
                 {
                     @: alert-success
                 }
                 else
                 {
                     @:alert-danger
                 }
             }

             alert-dismissible fade show" role="alert">
            <strong>@ViewBag.EditMessage.Message</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>

